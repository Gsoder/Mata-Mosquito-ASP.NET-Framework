
@{
    Layout = null;
}



<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.js"></script>
    <title>Jogo da mosca</title>
    


</head>
<body>
    <div class="container">
        <div class="row bo">
            <div class="col">
                <div class="d-flex justify-content-center">
                    <img src="~/Imagens/game.png" />
                </div>
            </div>
        </div>

        @using (Html.BeginForm("app", "Game", FormMethod.Post))
        {
            <form class="row g-3 needs-validation" novalidate>
                <div class="row justify-content-sm-center">
                    <div class="col-auto">
                        <select class="form-select form-control" id="dificuldade" required name="dificult">
                            <option selected disabled value="">-- Selecione o nível --</option>
                            <option value="normal">Normal</option>
                            <option value="dificil">Difícil</option>
                            <option value="boww">Chuck Norris</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="d-flex justify-content-center">
                            <input type="submit" value="Iniciar Jogo" class="btn btn-danger btn-lg" style="margin-top: 10px;" id="iniciar" />
                        </div>
                    </div>
                </div>
            </form>
        };
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    </div>
</body>
</html>
